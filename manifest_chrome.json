{
  "manifest_version": 2,
  "name": "Tab Freezer",
  "version": "1.2.0",
  "description": "When Tab Freezer is active for a tab, all new tabs are closed automatically.",
  "author": "lynk",
  "icons": {
    "32": "icons/tabfreezer_icon_blue_32.png",
    "64": "icons/tabfreezer_icon_blue_64.png"
  },
  "commands": {
    "freezer-override": {
      "suggested_key": {
        "default": "Ctrl+Space",
        "linux": "Ctrl+Space",
        "mac": "MacCtrl+Space"
      },
      "description": "Override the tab freeze one time"
    }
  },
  "browser_action": {
    "browser_style": true,
    "default_area": "tabstrip",
    "default_icon": {
      "32": "icons/tabfreezer_icon_off.png"
    },
    "default_title": "TURN ON Freezing"
  },
  "options_ui": {
    "page": "options/tabfreezer_options.html",
    "open_in_tab": false
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": [
      "tabfreezer_bg.js"
    ]
  }
}