{
  "manifest_version": 2,
  "name": "Tab Freezer",
  "version": "1.1.0",
  "description": "When Tab Freezer is active for a domain, all new tabs are closed automatically.",
  "author": "lynk",
  "applications": {
    "gecko": {
      "id": "tabfreezer@lynk",
      "strict_min_version": "57.0"
    }
  },
  "icons": {
    "32": "icons/tabfreezer_icon_blue_32.png",
    "64": "icons/tabfreezer_icon_blue_64.png"
  },
  "commands": {
    "freezer-override": {
      "suggested_key": {
        "default": "Alt+1"
      }
    }
  },
  "browser_action": {
    "browser_style": true,
    "default_area": "tabstrip",
    "default_icon": {
      "32": "icons/tabfreezer_icon_off.png"
    },
    "default_title": "Turn Freezing ON"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": [
      "tabfreezer_bg.js"
    ]
  }
}